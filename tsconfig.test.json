{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"lib": [
			"es2020",
			"dom"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"outDir": "./dst",
		"sourceMap": false,
		"strict": true,
		"stripInternal": true,
		"target": "es2020",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"test/**/*"
	],
	"exclude": [
		"dst",
		"node_modules"
	]
}
